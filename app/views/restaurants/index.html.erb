<% if @restaurants.all.any? %>
  <% @restaurants.all.each do |restaurant| %>
    <h3><%= link_to restaurant.name, restaurant_path(restaurant)%></h3>
    <p><%= restaurant.description %></p>
    <% restaurant.reviews.each do |review |%>
       <li><%= review.thoughts %></li>
       <li><%= review.rating %></li>
    <% end %>
    <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
  <% end %>
<% else %>
  <h2> NOOO RESTAURANTS EVER!!! </h2>
<% end %>



<a href="<%= new_restaurant_url %>">Add a restaurant</a>
